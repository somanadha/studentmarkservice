pipeline {
    agent any

    environment {
        // Uncomment below if pushing to DockerHub
        // DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        APP_NAME = "studentmarkservice"
        IMAGE_NAME = "${APP_NAME}_image"
        IMAGE_TAG = "${BUILD_NUMBER}${BUILD_NUMBER}"
        APP_K8S_NAMESPACE = "${APP_NAME}_ns"
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/somanadha/studentmarkservice.git'
            }
        }

        stage('Build') {
            steps {
                // Build docker image using Dockerfile
                bat "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f Dockerfile ."
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Run docker container instance
                    bat "docker run -d --name ${APP_NAME} -p 8100:8100 ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }

        stage('K8s Deployment') {
            steps {
                script {
                    // Replace variable in YAML and apply
                    //bat "bash -c \"envsubst < k8s/deployment-template.yaml > k8s/deployment.yaml\""
                    bat '''
                    bash -lc "envsubst < k8s/deployment-template.yaml > k8s/deployment.yaml"
                    '''

                    bat "kubectl apply -f k8s/deployment.yaml"
                    bat "kubectl apply -f k8s/service.yaml"
                    bat "kubectl apply -f k8s/namespace.yaml"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Checkout, Build, Dockerize & Deploy completed successfully!"
        }
        failure {
            echo "❌ Build failed!"
        }
    }
}
